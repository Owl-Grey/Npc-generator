                    id: name
                    text:""


            GridLayout:
                rows:2
                Label:
                    text:"Темперамент"
                    bold: True
                    italic: True
                Label:
                    id: temp
                    text:""
            GridLayout:
                rows:2
                Label:
                    text:"Характеристики"
                    bold: True
                    italic: True
                Label:
                    id: ch
                    text:""
            GridLayout:
                rows:2
                Label:
                    text:"Аугментации"
                    bold: True
                    italic: True
                Label:
                    id: aug
                    text:""
            GridLayout:
                rows:2
                Label:
                    padding_bottom: 20
                    text:"Характер"
                    bold: True
                    italic: True
                Label:
                    id: char
                    text:""
            BoxLayout:
                size_hint: .5, .5
                padding: 20
