

<Container>:
    name:name
    temp:temp
    ch:ch
    aug: aug
    char:char
    do_default_tab: False
    tab_width:358

    TabbedPanelItem:

        text: 'НПС'
        GridLayout:
            rows: 32
            GridLayout:
                rows:2
                Label:
                    text:"Имя"

                    bold: True
                    italic: True
                Label:
                    id: name
                    text:""


            GridLayout:
                rows:2
                Label:
                    text:"Темперамент"
                    bold: True
                    italic: True
                Label:
                    id: temp
                    text:""
            GridLayout:
                rows:2
                Label:
                    text:"Характеристики"
                    bold: True
                    italic: True
                Label:
                    id: ch
                    text:""
            GridLayout:
                rows:2
                Label:
                    text:"Аугментации"
                    bold: True
                    italic: True
                Label:
                    id: aug
                    text:""
            GridLayout:
                rows:2
                Label:
                    padding_bottom: 20
                    text:"Характер"
                    bold: True
                    italic: True
                Label:
                    id: char
                    text:""
            BoxLayout:
                size_hint: .5, .5
                padding: 20
                Button:
                    text: "Сгенерировать"
                    on_release:
                        root.gen()

    TabbedPanelItem:
        text: 'Противники'
        BoxLayout:
            Label:
                text: 'В разработке'
    TabbedPanelItem:
        text: 'Группировки'
        BoxLayout:
            Label:
                text: 'В разработке'
